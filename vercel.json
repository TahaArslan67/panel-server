{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/index.ts"
    },
    {
      "source": "/health",
      "destination": "/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/src/index.ts"
    }
  ]
} 